    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch on Raspi",
            "type": "cppdbg",
            "request": "launch",
            "program": "~/pi/test_board",
            "args": [],
            "miDebuggerServerAddress": "192.168.1.125:9080",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}